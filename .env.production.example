# Production Environment Variables
# IMPORTANTE: Copia questo file come .env sul server e modifica i valori

# Database Configuration
DB_USER=lemmario_user
DB_PASSWORD=CAMBIA_CON_PASSWORD_SICURA
DB_NAME=lemmario_db
DB_HOST=postgres
DB_PORT=5432

# Payload CMS Configuration
PAYLOAD_SECRET=CAMBIA_CON_STRINGA_RANDOM_MIN_32_CARATTERI
PAYLOAD_PUBLIC_SERVER_URL=https://glossari.dh.unica.it

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://glossari.dh.unica.it/api
NEXT_PUBLIC_SITE_URL=https://glossari.dh.unica.it

# GraphQL/API
# Origini CORS aggiuntive per consumatori browser esterni (separate da virgola)
# Il dominio principale (NEXT_PUBLIC_SITE_URL) e' incluso automaticamente
CORS_ALLOWED_ORIGINS=
# Rate limit richieste per minuto (default: 500)
RATE_LIMIT_MAX=500

# Environment
NODE_ENV=production
