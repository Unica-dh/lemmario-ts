{
  "permissions": {
    "allow": [
      "Bash(gh run list:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/typecheck-after-edit.sh",
            "timeout": 60,
            "statusMessage": "Checking TypeScript types..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-push-checks.sh",
            "timeout": 120,
            "statusMessage": "Running pre-push validation..."
          }
        ]
      },
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/ghcr-lowercase-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
