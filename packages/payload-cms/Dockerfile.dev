FROM node:20-alpine

# Install pnpm and postgresql-client (for pg_dump export endpoint)
RUN npm install -g pnpm@8.15.1 && \
    apk add --no-cache postgresql16-client

# Set working directory
WORKDIR /workspace

# Copy workspace files for pnpm
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages/payload-cms/package.json ./packages/payload-cms/

# Install all dependencies
RUN pnpm install --frozen-lockfile

# Rebuild native modules for Alpine Linux
RUN pnpm rebuild sharp

# In dev mode, code is mounted from host via volumes
# Working dir will be set to /workspace/packages/payload-cms by docker-compose

# Expose port
EXPOSE 3000

# Start dev server
CMD ["pnpm", "dev"]
