FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm@8.15.1

# Set working directory
WORKDIR /workspace

# Copy workspace files for pnpm
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages/payload-cms/package.json ./packages/payload-cms/

# Install all dependencies
RUN pnpm install --frozen-lockfile

# Rebuild native modules for Alpine Linux
RUN pnpm rebuild sharp

# In dev mode, code is mounted from host via volumes
# Working dir will be set to /workspace/packages/payload-cms by docker-compose

# Expose port
EXPOSE 3000

# Start script: build prima di avviare dev server
CMD ["sh", "-c", "cd /workspace/packages/payload-cms && pnpm build && pnpm dev"]
