# Database Configuration
DB_USER=lemmario_user
DB_PASSWORD=your_secure_password_here
DB_NAME=lemmario_db
DB_HOST=localhost
DB_PORT=5432
DATABASE_URI=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Payload CMS Configuration
PAYLOAD_SECRET=your_payload_secret_min_32_chars_here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# GraphQL/API
# Origini CORS aggiuntive per consumatori browser esterni (separate da virgola)
# Il dominio principale (NEXT_PUBLIC_SITE_URL) e' incluso automaticamente
CORS_ALLOWED_ORIGINS=
# Rate limit richieste per minuto (aumentare a 10000 per migrazione dati)
RATE_LIMIT_MAX=500

# Environment
NODE_ENV=development
